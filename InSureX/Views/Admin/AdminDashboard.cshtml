@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4">📊 Admin Dashboard - InSureX</h2>

<div class="row text-center">
    <div class="col-md-3">
        <div class="card shadow-sm text-white bg-primary mb-3">
            <div class="card-header">Total Claims</div>
            <div class="card-body">
                <h3>@ViewBag.TotalClaims</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm text-dark bg-warning mb-3">
            <div class="card-header">Pending</div>
            <div class="card-body">
                <h3>@ViewBag.PendingClaims</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm text-white bg-success mb-3">
            <div class="card-header">Approved</div>
            <div class="card-body">
                <h3>@ViewBag.ApprovedClaims</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm text-white bg-danger mb-3">
            <div class="card-header">Rejected</div>
            <div class="card-body">
                <h3>@ViewBag.RejectedClaims</h3>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="alert alert-info shadow-sm">
            <strong>Total Claimed Amount:</strong> ₹@string.Format("{0:N2}", ViewBag.TotalClaimedAmount)
        </div>
    </div>
    <div class="col-md-6">
        <div class="alert alert-success shadow-sm">
            <strong>Total Approved Amount:</strong> ₹@string.Format("{0:N2}", ViewBag.TotalApprovedAmount)
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="ManageClaims" class="btn btn-primary mt-3">Manage Claims</a>
    <a asp-action="Reports" class="btn btn-secondary mt-3">View Reports</a>
    <a asp-action="AuditLogs" class="btn btn-dark mt-3">View Audit Logs</a>
</div>
